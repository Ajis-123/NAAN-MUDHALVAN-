<body>
  <header>
    <h1>üì∞ News Feed Application</h1>
    <p>Live Headlines from GNews API</p>
  </header>

  <nav>
    <button onclick="loadNews('general')">General</button>
    <button onclick="loadNews('world')">World</button>
    <button onclick="loadNews('business')">Business</button>
    <button onclick="loadNews('technology')">Technology</button>
    <button onclick="loadNews('entertainment')">Entertainment</button>
    <button onclick="loadNews('sports')">Sports</button>
    <button onclick="loadNews('health')">Health</button>
  </nav>

  <p id="loading" class="loading">Fetching latest news...</p>
  <div id="newsContainer" class="container"></div>

  <footer>¬© 2025 News Feed Application</footer>

  <script>
    const apiKey = "9b65f19d2d6fab0cb2b9a65fe5f4525a"; // Replace with your key from gnews.io
    const newsContainer = document.getElementById("newsContainer");
    const loadingText = document.getElementById("loading");

    async function loadNews(category = "general") {
      loadingText.style.display = "block";
      newsContainer.innerHTML = "";

      try {
        const res = await fetch(
          `https://gnews.io/api/v4/top-headlines?category=${category}&lang=en&country=in&max=10&apikey=${apiKey}`
        );
        const data = await res.json();

        loadingText.style.display = "none";

        if (!data.articles || data.articles.length === 0) {
          newsContainer.innerHTML =
            "<p class='loading'>No news found for this category.</p>";
          return;
        }

        data.articles.forEach((article) => {
          const card = document.createElement("div");
          card.classList.add("card");
          card.innerHTML = `
            <img src="${article.image || "https://via.placeholder.com/400x200"}" alt="">
            <div class="card-content">
              <h3>${article.title}</h3>
              <p>${article.description || "No description available."}</p>
              <a href="${article.url}" target="_blank" class="source">Read more ‚Üí</a>
            </div>
          `;
          newsContainer.appendChild(card);
        });
      } catch (error) {
        console.error("Error loading news:", error);
        loadingText.style.display = "none";
        newsContainer.innerHTML = `
          <p class='loading'>‚ö†Ô∏è Unable to fetch live news. Showing demo data instead.</p>
        `;
        loadDemoData();
      }
    }

    function loadDemoData() {
      const demo = [
        {
          title: "Offline Demo Article 1",
          description:
            "This is a demo article shown when live news cannot be fetched.",
          url: "#",
          image: "https://via.placeholder.com/400x200",
        },
        {
          title: "Offline Demo Article 2",
          description: "Sample news card layout for offline mode preview.",
          url: "#",
          image: "https://via.placeholder.com/400x200",
        },
      ];

      demo.forEach((article) => {
        const card = document.createElement("div");
        card.classList.add("card");
        card.innerHTML = `
          <img src="${article.image}" alt="">
          <div class="card-content">
            <h3>${article.title}</h3>
            <p>${article.description}</p>
            <a href="${article.url}" class="source">Read more ‚Üí</a>
          </div>
        `;
        newsContainer.appendChild(card);
      });
    }

    loadNews(); // Load default category
  </script>
</body>
